
<div class="row">
  <div class="col m3 hide-on-small-only">
    <div class="card card-user">
      <div class="card-content">
        <div class="row">
           <%= gravatar_image_tag current_user.email, class: "profile-pic circle" %>
            <a class="btn-floating halfway-fab waves-effect waves-light"><i class="material-icons">add</i></a>
        </div>
        <p><%= current_user.email %></p>
        <p>@<%= current_user.username %></p>
      </div>
    </div>
  </div>
  
  <div class="col s12 m6">
    <div class="card">
      <div class="card-content">
        
        <div class="card-tabs">
          <ul class="tabs tabs-fixed-width">
            <li class="tab"><a class="active" href="#tweets">Tweets (<%= current_user.tweets.count %>)</a></li>
            <li class="tab"><a href="#following">Following (<%= current_user.following.count %>)</a></li>
            <li class="tab"><a href="#followers">Followers <%= current_user.followers.count %>)</a></li>
          </ul>
        </div>
        <div class="card-content tweets-card-content">
          <div id="tweets">
            <ul class="collection">
              <% @tweets.each do |tweet| %>
              <li class="collection-item avatar">
                <%= gravatar_image_tag current_user.email, class: "circle" %>
                <span class="title">@<%= current_user.username %></span>
                <p><%= tweet.description %></p>
                <p><a href="#!" class="secondary-content"><i class="material-icons">favorite_border</i></a></p>
              </li>
              <% end %>
            </ul>
          </div>
          <div id="following">Test 2</div>
          <div id="followers">Test 3</div>
        </div>
      </div>
            
      <div class="card-action">
        <a href="#">Carregar mais</a>
      </div>
    </div>
  </div>

  <div class="col m3 hide-on-small-only">
    <div class="card">
      <div class="card-content">
        <span class="card-title">Follow</span>
        <p>
          I am a very simple card. I am good at containing small bits of information.
          I am convenient because I require little markup to use effectively.
        </p>
      </div>
            
      <div class="card-action">
        <a href="#">This is a link</a>
      </div>
    </div> 
  </div>

  

  </div>
</div>
  
  
