<div class="row">
  <div class="col m3 hide-on-small-only">
    <div class="card card-user">
      <div class="card-content">
        <div class="row center">
          <%= gravatar_image_tag current_user.email, class: "profile-pic circle" %>
        </div>
        <div class="row center">
          <p class="profile-name"><%= current_user.full_name %></p>
          <p>@<%= current_user.username %></p>
          <%= link_to 'Tweet', new_tweet_path, class: "btn halfway-fab waves-effect waves-light modal-trigger" %>
        </div>
      </div>
    </div>
  </div>

  <div class="col s12 m6">
    <div class="card card-twitter">
      <div class="card-content">

        <div class="card-tabs">
          <ul class="tabs center">
            <li class="tab">
              <a class="active" href="#tweets">Tweets <p class="text-center"><%= @tweets.count %></p></a>
            </li>
            <li class="tab">
              <a href="#following">Following <p class="text-center"><%= current_user.following.count %></p></a></li>
            <li class="tab">
              <a href="#followers">Followers <p class="text-center"><%= current_user.followers.count %></p></a></li>
            <li class="tab"><a href="#likes">Likes <p class="text-center"><%= current_user.liked_tweets.count %></p></a>
            </li>
          </ul>
        </div>
        <div class="card-content tweets-card-content">
          <%= render 'tweets', tweets: @tweets %>
          <%= render 'following', following: current_user.following %>
          <%= render 'followers', followers: current_user.followers %>
          <%= render 'likes', tweets: current_user.liked_tweets %>
        </div>
      </div>

    </div>
  </div>

  <div class="col m3 hide-on-small-only">
    <div class="card">
      <div class="card-content">
        <span class="card-title">Follow</span>
        <p>
          I am a very simple card. I am good at containing small bits of information.
          I am convenient because I require little markup to use effectively.
        </p>
      </div>

      <div class="card-action">
        <a href="#">This is a link</a>
      </div>
    </div>
  </div>

</div>
<!-- Modal Structure -->
<div id="modal1" class="modal">
  <div class="center-align modal-content">
    <h4>Compose your tweet</h4>
    <div class="row">
      <form class="col s12">
        <div class="row">
          <div class="main-text-area input-field col s12">
            <textarea id="image_description" type="text" class="tweet-textarea" placeholder="What's happening?"></textarea>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
  
